                "--verbose"
            ],
            "cwd": "${workspaceFolder}/KnxMonitor",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "KnxMonitor - Help",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/KnxMonitor/bin/Debug/net9.0/KnxMonitor.dll",
            "args": [
                "--help"
            ],
            "cwd": "${workspaceFolder}/KnxMonitor",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "KnxMonitor - Health Check Mode",
